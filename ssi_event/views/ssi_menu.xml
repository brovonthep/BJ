<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Dashboard -->
    <record id="spreadsheet_dashboard.spreadsheet_dashboard_menu_root" model="ir.ui.menu">
        <field name="sequence">100</field>
    </record>

    <!-- EVENTS -->
    <record id="event.event_main_menu" model="ir.ui.menu">
        <field name="sequence">200</field>
    </record>
        <!-- EVENTS -->
        <record id="event.menu_event_event" model="ir.ui.menu">
            <field name="sequence">0</field>
        </record>

        <!-- Configuration -->
        <record id="event.menu_event_configuration" model="ir.ui.menu">
            <field name="sequence">1</field>
        </record>

        <!-- Reporting -->
        <record id="event.menu_reporting_events" model="ir.ui.menu">
            <field name="sequence">2</field>
        </record>

    <!-- Website -->
    <record id="website.menu_website_configuration" model="ir.ui.menu">
        <field name="sequence">300</field>
    </record>

    <!-- Sales -->
    <record id="sale.sale_menu_root" model="ir.ui.menu">
        <field name="sequence">400</field>
        <field name="groups_id" eval="[(4,ref('ssi_event.group_ssi_user')), (4,ref('ssi_event.group_ssi_super_user')),
                                        (4,ref('sales_team.group_sale_salesman'))]"/>
    </record>
        <!-- Order -->
        <record id="sale.sale_order_menu" model="ir.ui.menu">
            <field name="groups_id" eval="[(4,ref('ssi_event.group_ssi_user')), (4,ref('ssi_event.group_ssi_super_user')),
                                            (4,ref('sales_team.group_sale_salesman'))]"/>
        </record>
            <record id="sale.menu_sale_quotations" model="ir.ui.menu">
                <field name="groups_id" eval="[(4,ref('ssi_event.group_ssi_user')), (4,ref('ssi_event.group_ssi_super_user'))]"/>
            </record>
            <record id="sale.res_partner_menu" model="ir.ui.menu">
                <field name="groups_id" eval="[(4,ref('ssi_event.group_ssi_user')), (4,ref('ssi_event.group_ssi_super_user'))]"/>
            </record>
        
        <!-- Promotion/Products -->
        <record id="sale.product_menu_catalog" model="ir.ui.menu">
            <field name="name">Promotion</field>
        </record>
            <!-- <record id="sale.menu_products" model="ir.ui.menu">
                <field name="groups_id" eval="[(4,ref('ssi_event.group_ssi_user')), (4,ref('ssi_event.group_ssi_super_user'))]"/>
            </record> -->
            <record id="sale_loyalty.menu_discount_loyalty_type_config" model="ir.ui.menu">
                <field name="groups_id" eval="[(4,ref('ssi_event.group_ssi_user')), (4,ref('ssi_event.group_ssi_super_user'))]"/>
            </record>

        <!-- Reporting -->
        <record id="sale.menu_sale_report" model="ir.ui.menu">
            <field name="groups_id" eval="[(4,ref('ssi_event.group_ssi_user')), (4,ref('ssi_event.group_ssi_super_user'))]"/>
        </record>
            <record id="sale.menu_reporting_sales" model="ir.ui.menu">
                <field name="groups_id" eval="[(4,ref('ssi_event.group_ssi_user')), (4,ref('ssi_event.group_ssi_super_user')),
                                            (4,ref('sales_team.group_sale_manager'))]"/>
            </record>
            <record id="sale.menu_reporting_salespeople" model="ir.ui.menu">
                <field name="groups_id" eval="[(4,ref('ssi_event.group_ssi_user')), (4,ref('ssi_event.group_ssi_super_user')),
                                            (4,ref('sales_team.group_sale_manager'))]"/>
            </record>
            <record id="sale.menu_reporting_product" model="ir.ui.menu">
                <field name="groups_id" eval="[(4,ref('ssi_event.group_ssi_user')), (4,ref('ssi_event.group_ssi_super_user')),
                                            (4,ref('sales_team.group_sale_manager'))]"/>
            </record>
            <record id="sale.menu_reporting_customer" model="ir.ui.menu">
                <field name="groups_id" eval="[(4,ref('ssi_event.group_ssi_user')), (4,ref('ssi_event.group_ssi_super_user')),
                                            (4,ref('sales_team.group_sale_manager'))]"/>
            </record>

    <!-- Contacts -->
    <record id="contacts.menu_contacts" model="ir.ui.menu">
        <field name="sequence">500</field>
        <field name="groups_id" eval="[(4,ref('ssi_event.group_ssi_user')), (4,ref('ssi_event.group_ssi_super_user'))]"/>
    </record>
        <!-- Contacts -->
        <record id="contacts.res_partner_menu_contacts" model="ir.ui.menu">
            <field name="groups_id" eval="[(4,ref('ssi_event.group_ssi_user')), (4,ref('ssi_event.group_ssi_super_user')),
                                        (4,ref('base.group_user')), (4,ref('base.group_partner_manager'))]"/>
        </record>
        <!-- Configuration -->
        <record id="contacts.res_partner_menu_config" model="ir.ui.menu">
            <field name="groups_id" eval="[(4,ref('ssi_event.group_ssi_user')), (4,ref('ssi_event.group_ssi_super_user'))]"/>
        </record>
            <!-- Contact Tags -->
            <record id="contacts.menu_partner_category_form" model="ir.ui.menu">
                <field name="groups_id" eval="[(4,ref('ssi_event.group_ssi_user')), (4,ref('ssi_event.group_ssi_super_user'))]"/>
            </record>
            <!-- Contact Titles -->
            <record id="contacts.menu_partner_title_contact" model="ir.ui.menu">
                <field name="groups_id" eval="[(4,ref('ssi_event.group_ssi_user')), (4,ref('ssi_event.group_ssi_super_user'))]"/>
            </record>
            <!-- Industries -->
            <record id="contacts.res_partner_industry_menu" model="ir.ui.menu">
                <field name="groups_id" eval="[(4,ref('ssi_event.group_ssi_user')), (4,ref('ssi_event.group_ssi_super_user'))]"/>
            </record>

    <!-- Mass Mailing -->
    <record id="mass_mailing.mass_mailing_menu_root" model="ir.ui.menu">
        <field name="groups_id" eval="[(6, 0, [ref('base.group_erp_manager')])]"/>
    </record>

    <!-- Event Locations -->
    <record id="website_event_track.menu_event_track_location" model="ir.ui.menu">
        <field name="name">Schedule Locations</field>
        <field name="groups_id" eval="[(4, ref('event.group_event_manager'))]"/>
    </record>

    <!-- Track Tag Categories -->
    <record id="website_event_track.event_track_tag_category_menu" model="ir.ui.menu">
        <field name="name">Schedule Tag Categories</field>
        <field name="groups_id" eval="[(4, ref('event.group_event_manager'))]"/>
    </record>

    <!-- Invoicing -->
    <record id="account.menu_finance" model="ir.ui.menu">
        <field name="sequence">1000</field>
    </record>


</odoo>