<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- FIN's Team -->
        <record id="group_ssi_fin" model="res.groups">
            <field name="name">SSI FIN</field>
            <field name="implied_ids" eval="[(4, ref('sales_team.group_sale_manager')), (4, ref('account.group_account_invoice'))]"/>
        </record>
        <record id="rule_ssi_fin_menu_no_access" model="ir.rule">
            <field name="name">SSI FIN Menu No Access</field>
            <field name="model_id" ref="base.model_ir_ui_menu"/>
            <field name="domain_force">[('id', 'not in', [75, 301, 220, 110, 15, 127, 157, 165, 182])]</field>
            <field name="groups" eval="[(4, ref('group_ssi_fin'))]"/>
        </record>

        <!-- SCB Management's Team -->
        <record id="group_ssi_user" model="res.groups">
            <field name="name">SSI User</field>
            <field name="category_id" ref="base.module_category_marketing_events"/>
            <field name="implied_ids" eval="[(4, ref('event.group_event_manager')), (4, ref('website.group_website_restricted_editor')),
                                            (4, ref('sales_team.group_sale_salesman')), (4, ref('website.group_multi_website')),
                                            (4, ref('mass_mailing.group_mass_mailing_user'))]"/>
        </record>
        <record id="group_ssi_super_user" model="res.groups">
            <field name="name">SSI Super User</field>
            <field name="category_id" ref="base.module_category_marketing_events"/>
            <field name="implied_ids" eval="[(4, ref('group_ssi_user'))]"/>
        </record>
        <record id="rule_ssi_user_menu_no_access" model="ir.rule">
            <field name="name">SSI User/SSI Super User Menu No Access</field>
            <field name="model_id" ref="base.model_ir_ui_menu"/>
            <!-- <field name="domain_force">[('id', 'not in', [75, 128, 259, 137, 119, 15, 223, 224, 325, 226, 238])]</field> -->
            <field name="domain_force">[('id', 'not in', [75, 128, 259, 137, 119, 15, 223, 226, 232])]</field>
            <field name="groups" eval="[(4, ref('group_ssi_user')),(4, ref('group_ssi_super_user'))]"/>
        </record>
    </data>
</odoo>
