<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="inherit_loyalty_program_view_form" model="ir.ui.view">
        <field name="name">inherit.loyalty.program.view.form</field>
        <field name="model">loyalty.program</field>
        <field name="inherit_id" ref="loyalty.loyalty_program_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form//sheet//group//group//label[@for='available_on']" position="attributes">
                <attribute name="invisible">1 if can_view_available_on else 0</attribute>
            </xpath>
            <xpath expr="//div[@id='o_loyalty_program_availabilities']" position="attributes">
                <attribute name="invisible">1 if can_view_available_on else 0</attribute>
            </xpath>
            <xpath expr="//div[@id='o_loyalty_program_availabilities']" position="after">
                <field name="can_view_available_on" invisible="1"/>
            </xpath>
        </field>
    </record>

</odoo>